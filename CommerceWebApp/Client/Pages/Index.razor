@page "/"
@using CommerceWebApp.Shared

@switch (currentPage)
{
    case Page.PRODUCTS:
        <CommerceWebApp.Client.Pages.Products.Products/>
        break;

    default:
        <CommerceWebApp.Client.Pages.Products.Products/>
        break;
}

@code {
    private Page currentPage = Page.PRODUCTS;

    public void setCurrentPage(Page page)
    {
        this.currentPage = page;
        StateHasChanged();
    }
}
